<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.gmail.nelsonr462.crossover.ListUrlFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/select_specific_urls_button_textOff"
            android:id="@+id/select_specific_urls_button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_all_urls_button_text"
            android:id="@+id/open_all_urls_button"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dynamiclistview"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/open_all_urls_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:layout_below="@+id/open_all_urls_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

</FrameLayout>
